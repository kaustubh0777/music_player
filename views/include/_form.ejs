 <!-- form handling -->
 <form action="/api/songs" method="POST" id="add_user" enctype="multipart/form-data">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Can Help Falling in Love with You" required>
        </div>


        <div class="form-group">
            <label for="Date of Release" class="text-light">Date of Release</label>
        </br>
        </br>
            <input type="date" name="DOR" required>
        </div>
    
        <div class="form-group">
        <label for="artists">Artists</label>
        <div id="create_artitst_form" class="center hideform">
            <button  type="button" id="close" style="float: right;">X</button>
            <form action="/action_page.php">
                Name:<br>
                <input type="text" name="artist_name" placeholder="Kaustubh Pathak">
                <br>
                DOB<br>
                <input type="date" name="DOB">
                <br><br>
                Desc:<br>
                <input type="text" name="desc" placeholder="Anything">
                <br>
                <input type="button" id="create_artitst" value="Creatte new Artist">
            </form>
        </div>
        <button id="show" type="button">Add new Artist</button>


        <select id="artists" name="artists" data-style="btn-default" class="selectpicker form-control" multiple="multiple">

        <!-- for loop code start -->
        <% for(var i=0; i < artists.length; i++) { %>
        <option value="<%= artists[i]._id %>"><%= artists[i].name %></option>
        <% } %>
        </select>
        </div>
    </br>
        <div class="form-group">
        <div class="d-flex justify-content-center">
            <div class="btn btn-mdb-color btn-rounded float-left">
              <span>Choose File</span>
              <input type="file" id="image" name="image" required>
            </div>
          </div>
        </div>

    </br>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>